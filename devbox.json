{
  "name":        "go devbox",
  "description": "Instant, easy, and predictable go development environment",
  "packages": [
    "go@latest",
    "cobra-cli@latest",
    "extism-cli@latest",
    "zig@latest",
    "rustup@latest",
    "nodejs@latest"
  ],
  "env": {
    "GOPATH": "$HOME/go/",
    "PATH":   "$PATH:$HOME/go/bin"
  },
  "shell": {
    "init_hook": [
      "export \"GOROOT=$(go env GOROOT)\"",
      "rustup default stable",
      "cargo fetch"
    ],
    "scripts": {
      "tidy": ["go mod tidy"]
    }
  }
}
